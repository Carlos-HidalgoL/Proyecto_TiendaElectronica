@model List<Factura>;

@{
    Layout = "_LayoutAdmin";
}

<h2 class="mb-3">Facturas</h2>

<div class="admin-element">

    <table id="table_id" class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Factura Id</th>
                <th>Fecha Creación</th>
                <th>Ultima Impresión</th>
                <th>Monto Total</th>
                <th>Subtotal</th>
                <th>Usuario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var factura in Model)
            {
                <tr>
                    <td class="text-center">@factura.FacturaId</td>
                    <td>@factura.FechaCreacion</td>
                    <td>@factura.UltimaFechaImpresion</td>
                    <td>@factura.MontoTotal</td>
                    <td>@factura.SubTotal</td>
                    <td>@factura.UsuarioId</td>
                    <td>
                        <a href="@Url.Action("DescargarPDF","Home", new{facturaId = factura.FacturaId})" class="btn btn-success">Descargar Pdf</a>
                    </td>
                  

                </tr>

            }

        
        </tbody>
    </table>

</div>