@model Proyecto_TiendaElectronica.Models.Articulo

@{
    Layout = "_LayoutAdmin";
}

<section class="get-in-touch">
    <h1 class="title">Información del Articulo</h1>
    <div class="contact-form row">
        <div class="col-lg-6">
            <div class="form-field">
                <input asp-for="Nombre" class="input-text js-input" type="text" readonly>
                <label class="label" asp-for="Nombre">Nombre</label>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-field">
                <input asp-for="Descripcion" class="input-text js-input" type="text" readonly>
                <label class="label" asp-for="Descripcion">Descripcion</label>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-field">
                <input asp-for="Precio" class="input-text js-input" type="number" readonly>
                <label class="label" asp-for="Precio">Precio</label>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-field">
                <input asp-for="Marca" class="input-text js-input" type="text" readonly>
                <label class="label" asp-for="Marca">Marca</label>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-field">
                <input asp-for="Cantidad" class="input-text js-input" type="number" readonly>
                <label class="label" asp-for="Cantidad">Cantidad</label>
            </div>
        </div>
        <div class="col-lg-12">
            <h3>Imágenes</h3>
            <div class="form-field row">
                <div class="col-lg-4">
                    <img src="@(ViewBag.Imagen1 != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(ViewBag.Imagen1)}" : Url.Content("~/images/no-image.png"))" class="img-thumbnail img-uniform" />
                </div>
                <div class="col-lg-4">
                    <img src="@(ViewBag.Imagen2 != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(ViewBag.Imagen2)}" : Url.Content("~/images/no-image.png"))" class="img-thumbnail img-uniform" />
                </div>
                <div class="col-lg-4">
                    <img src="@(ViewBag.Imagen3 != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(ViewBag.Imagen3)}" : Url.Content("~/images/no-image.png"))" class="img-thumbnail img-uniform" />
                </div>
            </div>
        </div>
    </div>
</section>
