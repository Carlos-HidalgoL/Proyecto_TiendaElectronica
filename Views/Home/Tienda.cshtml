@model List<Articulo>

<div class="my-5 migajas">
	<div class="container ">
		<div class="my-5 align-items-center">
			<div class="py-5">
				<p>Inicio / <span>Sobre Nosotros</span></p>
				<h1>Todos los productos</h1>
			</div>
		</div>
	</div>
</div>

<div class="my-5">
	<div class="container d-flex justify-content-center categorias">
			<ul class="d-flex m-0 justify-content-between list-unstyled">
				<li class="dropdown ">
					<a href="" class="btn rounded-0">Computadoras</a>
					<ul class="dropdown-menu rounded-0">
						<li><a href="#" class="sub_categoria">Gaming</a></li>
						<li><a href="#" class="sub_categoria">Oficina</a></li>
						<li><a href="#" class="sub_categoria">Laptops</a></li>
					</ul>
				</li>

				<li class="dropdown">
					<a href="" class="btn rounded-0">Perifericos</a>
					<ul class="dropdown-menu rounded-0">
						<li><a href="#" class="sub_categoria">Teclados</a></li>
						<li><a href="#" class="sub_categoria">Mouse</a></li>
						<li><a href="#" class="sub_categoria">Headset</a></li>
						<li><a href="#" class="sub_categoria">Mousepad</a></li>
						<li><a href="#" class="sub_categoria">Microfonos</a></li>
						<li><a href="#" class="sub_categoria">Impresoras</a></li>
						<li><a href="#" class="sub_categoria">Webcam</a></li>
					</ul>
				</li>

				<li class="dropdown">
					<a href="" class="btn rounded-0">Accesorios</a>
					<ul class="dropdown-menu rounded-0">
						<li><a href="#" class="sub_categoria">Adaptadores</a></li>
						<li><a href="#" class="sub_categoria">Extensiones</a></li>
						<li><a href="#" class="sub_categoria">Extensiones</a></li>
						<li><a href="#" class="sub_categoria">Cables</a></li>
						<li><a href="#" class="sub_categoria">Sillas</a></li>
						<li><a href="#" class="sub_categoria">LED</a></li>
					</ul>
				</li>

				<li class="dropdown">
					<a href="" class="btn rounded-0">Componentes</a>
					<ul class="dropdown-menu rounded-0">
						<li><a href="#" class="sub_categoria">Tarjeta Madre</a></li>
						<li><a href="#" class="sub_categoria">Procesadores</a></li>
						<li><a href="#" class="sub_categoria">Memoria Ram</a></li>
						<li><a href="#" class="sub_categoria">Tarjetas de Video</a></li>
						<li><a href="#" class="sub_categoria">Almacenamiento</a></li>
						<li><a href="#" class="sub_categoria">Enfriamiento Liquido</a></li>
						<li><a href="#" class="sub_categoria">Enfriamiento de Aire</a></li>
						<li><a href="#" class="sub_categoria">Fuentes de Poder</a></li>
						<li><a href="#" class="sub_categoria">Cases</a></li>
						<li><a href="#" class="sub_categoria">Ventiladores</a></li>
						<li><a href="#" class="sub_categoria">Monitores</a></li>
						<li><a href="#" class="sub_categoria">Reguladores UPS</a></li>
					</ul>
				</li>
			</ul>
	</div>
</div>


<section class="bsb-hero-5 px-3 bsb-overlay" style="background-image: url('/wwwroot/img/banner2.jpg');">
</section>



<div class="my-5">
	<div class="container">
		<h4 class="text-white mb-4">Productos</h4>
		<div class="row">
			@foreach (var articulo in Model)
			{
				<div class="col-md-3 col-sm-6">
					<div class="product-grid">
						<div class="product-image">
							<a href="#" class="image">
								<img class="pic-1" src="data:image;base64,@Convert.ToBase64String(@articulo.Imagen.Imagen1)" alt="@articulo.Nombre" class="img-fluid w-100" style="height: 260px;">
								<img class="pic-2" src="data:image;base64,@Convert.ToBase64String(@articulo.Imagen.Imagen2)" alt="@articulo.Nombre" class="img-fluid w-100" style="height: 260px;">
							</a>
							<ul class="product-links">
								<li><a href="@Url.Action("Producto", "Home" , new { Id = articulo.ArticuloId } )"><i class="fa fa-eye"></i></a></li>
								<li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
							</ul>
						</div>
						<div class="product-content">
							<h3 class="title"><a href="#">@articulo.Nombre</a></h3>
							<div class="precio"> ₡@articulo.Precio</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>